{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PHPCS",
            "type": "shell",
            "command": "./vendor/bin/phpcs",
            "args": [
                "--report=csv",
                "--runtime-set", "show_progress", "1",
                "--cache",
                "-p",
                "src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "owner": "php",
                "fileLocation": [ "absolute" ],
                "pattern": {
                    "regexp": "^\"(.+)\",(\\d+),(\\d+),(error|warning),\"(.*)\",(.*),\\d+,\\d+$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 6,
                    "code": 5
                }
            },
            "presentation": {
                "reveal": "never",
                "clear": true,
                "panel": "shared",
                "group": "PHPCS"
            }
        },


        {
            "label": "Frame: Build the code",
            "type": "shell",
            "command": "./framework build"
        },
    ]
}
