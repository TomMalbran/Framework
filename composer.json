{
    "name": "tommalbran/framework",
    "description": "My personal framework",
    "authors": [
        {
            "name": "Tomás Malbrán",
            "homepage": "https://github.com/TomMalbran"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-mysqli": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "firebase/php-jwt": "^6.3",
        "mustache/mustache": "^2.14",
        "phpmailer/phpmailer": "^6.7",
        "league/oauth2-google": "^4.0",
        "google/apiclient": "^2.12",
        "phpoffice/phpspreadsheet": "^1.25",
        "drewm/mailchimp-api": "^2.5",
        "mailchimp/transactional": "^1.0",
        "mailjet/mailjet-apiv3-php": "^1.5",
        "sendgrid/sendgrid": "^8.0"
    },
    "suggest" : {
        "mustache/mustache": "Used for Rendering templates",
        "firebase/php-jwt": "Used in Auth",
        "phpmailer/phpmailer": "Used for Mailing with SMTP",
        "league/oauth2-google": "Used for Mailing with Gmail",
        "drewm/mailchimp-api": "Used for Mailing with MailChimp",
        "mailchimp/transactional": "Used for Mailing with Mandrill",
        "mailjet/mailjet-apiv3-php": "Used for Mailing with Mailjet",
        "sendgrid/sendgrid": "Used for Mailing with SendGrid",
        "google/apiclient": "Used to for Google and Gmail",
        "phpoffice/phpspreadsheet": "Used to Import/Export data"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "src"
        }
    }
}
