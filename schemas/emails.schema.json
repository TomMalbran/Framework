{
    "title" : "Emails",
    "type"  : "object",
    "additionalProperties" : false,
    "patternProperties" : {
        "^[A-Z][A-Za-z]*$" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "required"             : [ "description", "subject", "message" ],
            "properties"           : {
                "description" : {
                    "type" : "string"
                },
                "subject" : {
                    "type" : "string"
                },
                "message" : {
                    "type"  : "array",
                    "items" : {
                        "type" : "string"
                    }
                }
            }
        }
    }
}
