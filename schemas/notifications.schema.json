{
    "title" : "Notifications",
    "type"  : "object",
    "additionalProperties" : false,
    "patternProperties" : {
        "^[A-Z][A-Za-z]*$" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "required"             : [ "description", "title", "message" ],
            "properties"           : {
                "description" : {
                    "type" : "string"
                },
                "title" : {
                    "type" : "string"
                },
                "message" : {
                    "type" : "string"
                }
            }
        }
    }
}
