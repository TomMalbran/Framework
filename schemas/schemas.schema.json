{
    "title" : "Schemas",
    "type"  : "object",
    "propertyNames" : {
        "pattern" : "^[A-Z][A-Za-z]*$"
    },
    "properties" : {
        "Credential"             : {},
        "CredentialDevice"       : {},
        "CredentialRefreshToken" : {},
        "CredentialReset"        : {},
        "CredentialSpam"         : {},
        "EmailTemplate"          : {},
        "EmailQueue"             : {},
        "EmailWhiteList"         : {},
        "NotificationQueue"      : {},
        "Settings"               : {},
        "LogID"                  : {},
        "LogSession"             : {},
        "LogAction"              : {},
        "LogDevice"              : {},
        "LogQuery"               : {},
        "LogError"               : {}
    },
    "patternProperties" : {
        "^[A-Z][A-Za-z]*$" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "properties"           : {
                "table"         : { "$ref" : "#/$defs/table"       },
                "fields"        : { "$ref" : "#/$defs/fields"      },
                "expressions"   : { "$ref" : "#/$defs/expressions" },
                "processed"     : { "$ref" : "#/$defs/fields"      },
                "joins"         : { "$ref" : "#/$defs/joins"       },
                "counts"        : { "$ref" : "#/$defs/counts"      },
                "subrequests"   : { "$ref" : "#/$defs/subrequests" },
                "foreigns"      : { "$ref" : "#/$defs/foreigns"    },
                "hasUsers"      : { "type" : "boolean"             },
                "hasFilters"    : { "type" : "boolean"             },
                "hasStatus"     : { "type" : "boolean"             },
                "hasPositions"  : { "type" : "boolean"             },
                "hasTimestamps" : { "type" : "boolean"             },
                "canCreate"     : { "type" : "boolean"             },
                "canEdit"       : { "type" : "boolean"             },
                "canDelete"     : { "type" : "boolean"             },
                "canRemove"     : { "type" : "boolean"             }
            },
            "required" : [
                "table",
                "fields",
                "hasTimestamps",
                "canCreate",
                "canEdit",
                "canDelete",
                "canRemove"
            ]
        }
    },
    "$defs" : {
        "fields" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "patternProperties"    : {
                "^(?!type$)(?!code$)[A-Za-z_]*$" : {
                    "type"       : "object",
                    "required"   : [ "type" ],
                    "properties" : {
                        "type"      : { "$ref" : "#/$defs/type" },
                        "name"      : { "$ref" : "#/$defs/name" },
                        "length"    : { "type" : "number"       },
                        "decimals"  : { "type" : "number"       },
                        "dateType"  : { "$ref" : "#/$defs/name" },
                        "date"      : { "$ref" : "#/$defs/name" },
                        "hour"      : { "$ref" : "#/$defs/name" },
                        "path"      : { "$ref" : "#/$defs/name" },
                        "default"   : {                         },
                        "isPrimary" : { "type" : "boolean"      },
                        "isKey"     : { "type" : "boolean"      },
                        "isName"    : { "type" : "boolean"      },
                        "isUnique"  : { "type" : "boolean"      },
                        "isParent"  : { "type" : "boolean"      },
                        "noExists"  : { "type" : "boolean"      },
                        "noEmpty"   : { "type" : "boolean"      },
                        "isSigned"  : { "type" : "boolean"      },
                        "noPrefix"  : { "type" : "boolean"      },
                        "cantEdit"  : { "type" : "boolean"      },
                        "mergeTo"   : { "$ref" : "#/$defs/name" },
                        "defaultTo" : { "$ref" : "#/$defs/name" }
                    }
                }
            }
        },
        "expressions" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[a-z][A-Za-z]*$" : {
                    "type"       : "object",
                    "required"   : [ "expression", "type" ],
                    "properties" : {
                        "expression" : { "type" : "string"       },
                        "type"       : { "$ref" : "#/$defs/type" }
                    }
                }
            }
        },
        "subrequests" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[A-Z][A-Za-z]*$" : {
                    "type"       : "object",
                    "required"   : [ "name" ],
                    "properties" : {
                        "type"    : { "type" : "string"       },
                        "name"    : { "$ref" : "#/$defs/name" },
                        "idKey"   : { "$ref" : "#/$defs/name" },
                        "idName"  : { "$ref" : "#/$defs/name" },
                        "where"   : { "type" : "array"        },
                        "orderBy" : { "$ref" : "#/$defs/name" },
                        "isAsc"   : { "type" : "boolean"      },
                        "asArray" : { "type" : "boolean"      },
                        "field"   : { "$ref" : "#/$defs/name" },
                        "value"   : {                         }
                    }
                }
            }
        },
        "counts" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[a-z][A-Za-z]*$" : {
                    "type"       : "object",
                    "required"   : [ "table", "type" ],
                    "properties" : {
                        "table"     : { "$ref" : "#/$defs/table" },
                        "type"      : { "$ref" : "#/$defs/type"  },
                        "isSum"     : { "type" : "boolean"       },
                        "value"     : { "type" : "string"        },
                        "mult"      : { "type" : "number"        },
                        "onTable"   : { "$ref" : "#/$defs/table" },
                        "rightKey"  : { "$ref" : "#/$defs/name"  },
                        "leftKey"   : { "$ref" : "#/$defs/name"  },
                        "where"     : { "type" : "array"         },
                        "noDeleted" : { "type" : "boolean"       }
                    }
                }
            }
        },
        "joins" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[A-Za-z_]*$" : {
                    "type"       : "object",
                    "required"   : [ "table" ],
                    "properties" : {
                        "table"      : { "$ref" : "#/$defs/table"   },
                        "asTable"    : { "$ref" : "#/$defs/table"   },
                        "onTable"    : { "$ref" : "#/$defs/table"   },
                        "leftKey"    : { "$ref" : "#/$defs/name"    },
                        "rightKey"   : { "$ref" : "#/$defs/name"    },
                        "and"        : { "type" : "string"          },
                        "andKey"     : { "type" : "string"          },
                        "andKeys"    : { "$ref" : "#/$defs/strings" },
                        "orKeys"     : { "$ref" : "#/$defs/strings" },
                        "andValue"   : { "type" : "string"          },
                        "andTable"   : { "type" : "string"          },
                        "andDeleted" : { "type" : "boolean"         },
                        "prefix"     : { "$ref" : "#/$defs/name"    },
                        "fields"     : { "$ref" : "#/$defs/fields"  },
                        "fieldKeys"  : { "$ref" : "#/$defs/strings" },
                        "mergeGlue"  : { "type" : "string"          }
                    }
                }
            }
        },
        "foreigns" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[A-Za-z_]*$" : {
                    "type"       : "object",
                    "required"   : [ "table" ],
                    "properties" : {
                        "table"    : { "$ref" : "#/$defs/table" },
                        "leftKey"  : { "$ref" : "#/$defs/name"  },
                        "rightKey" : { "$ref" : "#/$defs/name"  }
                    }
                }
            }
        },
        "strings" : {
            "type"  : "array",
            "items" : { "type" : "string" }
        },
        "name" : {
            "type"    : "string",
            "pattern" : "^[A-Za-z_]*$"
        },
        "table" : {
            "type"    : "string",
            "pattern" : "^[a-z][a-z_]*[a-z]$"
        },
        "type" : {
            "enum" : [
                "id",
                "boolean",
                "number",
                "float",
                "price",
                "date",
                "string",
                "json",
                "csv",
                "html",
                "text",
                "longtext",
                "encrypt",
                "file"
            ]
        }
    }
}
