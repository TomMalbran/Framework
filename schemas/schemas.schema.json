{
    "title"                : "Schemas",
    "type"                 : "object",
    "additionalProperties" : false,
    "propertyNames"        : {
        "pattern" : "^[A-Z][A-Za-z]*$"
    },
    "patternProperties" : {
        "^[A-Z][A-Za-z]*$" : {
            "type"                 : "object",
            "additionalProperties" : false,
            "properties"           : {
                "fields"        : { "$ref" : "#/$defs/fields"      },
                "processed"     : { "$ref" : "#/$defs/processed"   },
                "expressions"   : { "$ref" : "#/$defs/expressions" },
                "joins"         : { "$ref" : "#/$defs/joins"       },
                "counts"        : { "$ref" : "#/$defs/counts"      },
                "subrequests"   : { "$ref" : "#/$defs/subrequests" },
                "foreigns"      : { "$ref" : "#/$defs/foreigns"    },
                "hasUsers"      : { "type" : "boolean"             },
                "hasFilters"    : { "type" : "boolean"             },
                "hasStatus"     : { "type" : "boolean"             },
                "hasPositions"  : { "type" : "boolean"             },
                "hasTimestamps" : { "type" : "boolean"             },
                "canCreate"     : { "type" : "boolean"             },
                "canEdit"       : { "type" : "boolean"             },
                "canDelete"     : { "type" : "boolean"             },
                "canRemove"     : { "type" : "boolean"             }
            },
            "dependentRequired" : {
                "fields" : [
                    "fields",
                    "hasTimestamps",
                    "canCreate",
                    "canEdit",
                    "canDelete",
                    "canRemove"
                ]
            }
        }
    },
    "$defs" : {
        "fields" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^(?!type$)(?!code$)([A-Z_]*|[a-z][A-Za-z1-9]*)$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "type" ],
                    "properties"           : {
                        "type"      : { "$ref" : "#/$defs/type"     },
                        "length"    : { "type" : "number"           },
                        "isSigned"  : { "type" : "boolean"          },
                        "decimals"  : { "type" : "number"           },
                        "date"      : { "$ref" : "#/$defs/field"    },
                        "dateType"  : { "$ref" : "#/$defs/dateType" },
                        "hour"      : { "$ref" : "#/$defs/field"    },
                        "path"      : { "$ref" : "#/$defs/field"    },
                        "default"   : { "type" : "string"           },
                        "isPrimary" : { "type" : "boolean"          },
                        "isKey"     : { "type" : "boolean"          },
                        "isName"    : { "type" : "boolean"          },
                        "isUnique"  : { "type" : "boolean"          },
                        "isParent"  : { "type" : "boolean"          },
                        "noExists"  : { "type" : "boolean"          },
                        "noEmpty"   : { "type" : "boolean"          },
                        "cantEdit"  : { "type" : "boolean"          }
                    }
                }
            }
        },
        "processed" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[a-z][A-Za-z]*$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "type" ],
                    "properties"           : {
                        "type" : { "$ref" : "#/$defs/type" }
                    }
                }
            }
        },
        "expressions" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[a-z][A-Za-z]*$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "expression", "type" ],
                    "properties"           : {
                        "expression" : { "type" : "string"       },
                        "type"       : { "$ref" : "#/$defs/type" }
                    }
                }
            }
        },
        "subrequests" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[A-Z][A-Za-z]*$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "name" ],
                    "properties"           : {
                        "type"    : { "type" : "string"          },
                        "name"    : { "$ref" : "#/$defs/field"   },
                        "idKey"   : { "$ref" : "#/$defs/field"   },
                        "idName"  : { "$ref" : "#/$defs/field"   },
                        "where"   : { "$ref" : "#/$defs/strings" },
                        "orderBy" : { "$ref" : "#/$defs/field"   },
                        "isAsc"   : { "type" : "boolean"         },
                        "asArray" : { "type" : "boolean"         },
                        "field"   : { "$ref" : "#/$defs/field"   },
                        "value"   : { "type" : "string"          },
                        "values"  : { "$ref" : "#/$defs/strings" }
                    }
                }
            }
        },
        "counts" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^[a-z][A-Za-z]*$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "schema", "type" ],
                    "properties"           : {
                        "schema"    : { "$ref" : "#/$defs/schema"  },
                        "type"      : { "$ref" : "#/$defs/type"    },
                        "isSum"     : { "type" : "boolean"         },
                        "key"       : { "type" : "string"          },
                        "value"     : { "type" : "string"          },
                        "mult"      : { "type" : "number"          },
                        "onSchema"  : { "$ref" : "#/$defs/schema"  },
                        "rightKey"  : { "$ref" : "#/$defs/field"   },
                        "leftKey"   : { "$ref" : "#/$defs/field"   },
                        "where"     : { "$ref" : "#/$defs/strings" },
                        "noDeleted" : { "type" : "boolean"         }
                    }
                }
            }
        },
        "joins" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^([A-Z_]*|[a-z][A-Za-z0-9]*)$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "schema", "fields" ],
                    "properties"           : {
                        "schema"     : { "$ref" : "#/$defs/schema"     },
                        "onSchema"   : { "$ref" : "#/$defs/schema"     },
                        "asSchema"   : { "$ref" : "#/$defs/schema"     },
                        "leftKey"    : { "$ref" : "#/$defs/field"      },
                        "rightKey"   : { "$ref" : "#/$defs/field"      },
                        "andSchema"  : { "$ref" : "#/$defs/schema"     },
                        "and"        : { "type" : "string"             },
                        "andKey"     : { "type" : "string"             },
                        "andKeys"    : { "$ref" : "#/$defs/strings"    },
                        "orKeys"     : { "$ref" : "#/$defs/strings"    },
                        "andValue"   : { "type" : "string"             },
                        "andDeleted" : { "type" : "boolean"            },
                        "prefix"     : { "$ref" : "#/$defs/field"      },
                        "fields"     : { "$ref" : "#/$defs/joinFields" },
                        "mergeGlue"  : { "type" : "string"             }
                    }
                }
            }
        },
        "joinFields" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^(?!type$)(?!code$)([A-Z_]*|[a-z][A-Za-z0-9]*)$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "type" ],
                    "properties"           : {
                        "type"      : { "$ref" : "#/$defs/type"  },
                        "decimals"  : { "type" : "number"        },
                        "noPrefix"  : { "type" : "boolean"       },
                        "mergeTo"   : { "$ref" : "#/$defs/field" },
                        "defaultTo" : { "$ref" : "#/$defs/field" }
                    }
                }
            }
        },
        "foreigns" : {
            "type"                 : "object",
            "minProperties"        : 1,
            "additionalProperties" : false,
            "patternProperties"    : {
                "^([A-Z_]*|[a-z][A-Za-z0-9]*)$" : {
                    "type"                 : "object",
                    "additionalProperties" : false,
                    "required"             : [ "schema" ],
                    "properties"           : {
                        "schema"   : { "$ref" : "#/$defs/schema" },
                        "leftKey"  : { "$ref" : "#/$defs/field"  },
                        "rightKey" : { "$ref" : "#/$defs/field"  }
                    }
                }
            }
        },
        "strings" : {
            "type"  : "array",
            "items" : { "type" : "string" }
        },
        "schema" : {
            "type"    : "string",
            "pattern" : "^[A-Z][A-Za-z]*$"
        },
        "field" : {
            "type"    : "string",
            "pattern" : "^([A-Z]+[A-Z_]*[A-Z]+|[a-z][A-Za-z0-9]*)$"
        },
        "type" : {
            "enum" : [
                "id",
                "boolean",
                "number",
                "float",
                "date",
                "string",
                "json",
                "text",
                "longtext",
                "encrypt",
                "file"
            ]
        },
        "dateType" : {
            "enum" : [
                "start",
                "middle",
                "end"
            ]
        }
    }
}
