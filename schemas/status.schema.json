{
    "title"      : "Status",
    "type"       : "object",
    "required"   : [ "values", "groups" ],
    "properties" : {
        "values" : {
            "type" : "object",
            "propertyNames" : {
                "pattern" : "^[A-Z][A-Za-z]*$"
            },
            "patternProperties" : {
                "^[A-Z][A-Za-z]*$" : {
                    "enum" : [
                        "green",
                        "yellow",
                        "red"
                    ]
                }
            }
        },
        "groups" : {
            "type" : "object",
            "propertyNames" : {
                "pattern" : "^[A-Z][A-Za-z]*$"
            },
            "patternProperties" : {
                "^[A-Z][A-Za-z]*$" : {
                    "type"  : "array",
                    "items" : {
                        "type"    : "string",
                        "pattern" : "^[A-Z][A-Za-z]*$"
                    }
                }
            }
        }
    }
}
